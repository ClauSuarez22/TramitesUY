<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uy.edu.ucu.android.tramitesuy.controller.ProceedingsDetailFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5sp"
                android:layout_weight="6"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/proceeding_name"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5sp"
                    android:textStyle="bold"
                    style="@style/letterStyle"
                    android:textSize="@dimen/letterSize"
                    android:text=""/>

                <Button
                    android:id="@+id/ver_mapa"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:background="@drawable/green_button"
                    style="@style/button_text"
                    android:text="Ver mapa"
                    android:onClick="verMapa" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5sp"
                android:layout_weight="3"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/proceeding_description_label"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5sp"
                    style="@style/letterStyle"
                    android:textStyle="bold"
                    android:textSize="@dimen/letterSize"
                    android:text="Detalle"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5sp"
                android:layout_weight="8"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/proceeding_description"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5sp"
                    style="@style/letterStyle"
                    android:textSize="@dimen/textSize"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5sp"
                android:layout_weight="3"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/proceeding_depends_on_label"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5sp"
                    style="@style/letterStyle"
                    android:textStyle="bold"
                    android:textSize="@dimen/letterSize"
                    android:text="Organismo"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5sp"
                android:layout_weight="3"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/proceeding_depends_on"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5sp"
                    style="@style/letterStyle"
                    android:textSize="@dimen/textSize"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5sp"
                android:layout_weight="3"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/proceeding_req_label"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5sp"
                    style="@style/letterStyle"
                    android:textStyle="bold"
                    android:textSize="@dimen/letterSize"
                    android:text="Requerimientos"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5sp"
                android:layout_weight="8"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/proceeding_req"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5sp"
                    style="@style/letterStyle"
                    android:textSize="@dimen/textSize"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5sp"
                android:layout_weight="3"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/proceeding_status_label"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5sp"
                    style="@style/letterStyle"
                    android:textStyle="bold"
                    android:textSize="@dimen/letterSize"
                    android:text="Status"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:layout_weight="3"
                >

                <TextView
                    android:id="@+id/proceeding_status"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5sp"
                    style="@style/letterStyle"
                    android:textSize="@dimen/textSize"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5sp"
                android:layout_weight="3"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/proceeding_category_label"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5sp"
                    style="@style/letterStyle"
                    android:textStyle="bold"
                    android:textSize="@dimen/letterSize"
                    android:text="Categoría"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:layout_weight="3"
                >

                <TextView
                    android:id="@+id/proceeding_category"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5sp"
                    style="@style/letterStyle"
                    android:textSize="@dimen/textSize"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5sp"
                android:layout_weight="3"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/proceeding_when_where_label"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5sp"
                    style="@style/letterStyle"
                    android:textStyle="bold"
                    android:textSize="@dimen/letterSize"
                    android:text="Cuándo y Dónde"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:layout_weight="8"
                >

                <TextView
                    android:id="@+id/proceeding_when_where"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5sp"
                    style="@style/letterStyle"
                    android:textSize="@dimen/textSize"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5sp"
                android:layout_weight="3"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/proceeding_url_label"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5sp"
                    style="@style/letterStyle"
                    android:textStyle="bold"
                    android:textSize="@dimen/letterSize"
                    android:text="URL"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:layout_weight="3"
                >

                <TextView
                    android:id="@+id/proceeding_url"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:autoLink="web"
                    android:layout_marginTop="5sp"
                    style="@style/letterStyle"
                    android:textSize="@dimen/textSize"
                    android:text=""/>

            </LinearLayout>

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:visibility="gone"
            android:id="@android:id/list" />


    </LinearLayout>

</FrameLayout>
